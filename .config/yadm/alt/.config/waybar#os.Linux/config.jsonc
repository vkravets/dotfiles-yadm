{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 50,
    "modules-left": ["clock","custom/weather","wlr/workspaces"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["network", "bluetooth", "hyprland/language", "temperature", "battery", "backlight", "pulseaudio", "pulseaudio#microphone", "tray"],
    "hyprland/window": {
        "format": "{}"
